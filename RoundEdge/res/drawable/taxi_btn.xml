<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    	          <shape>
            <gradient
                android:startColor="#a9db80"
                android:endColor="#96c56f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8bcf54" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>       
          <shape>
            <gradient
                android:startColor="#8ed058"
                android:endColor="#7bb64b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#74bf36" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>