<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    	          <shape>
            <gradient
                android:startColor="#a67939"
                android:endColor="#845108"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7c5b2b" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>       
          <shape>
            <gradient
                android:startColor="#805d2c"
                android:endColor="#543305"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#5a421f" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
